<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".TimeActivity">

    <EditText
        android:id="@+id/input_ms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"

        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_convert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convert"

        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="@+id/input_ms"
        app:layout_constraintStart_toStartOf="@+id/input_ms"
        app:layout_constraintTop_toBottomOf="@+id/input_ms"
        app:layout_constraintVertical_bias="0.185"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/time_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result"

        app:layout_constraintTop_toTopOf="@id/btn_convert"
        app:layout_constraintStart_toStartOf="@id/btn_convert"
        app:layout_constraintEnd_toEndOf="@id/btn_convert"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.4"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>